<?xml version='1.0' encoding='utf-8'?>
<widget id="custom.project.id" version="1.0.0" xmlns="http://www.w3.org/ns/widgets">
    <name>GottaGoFast</name>
    <description>
        A template boilerplate for making phaser 3 projects (could be other projects) and build them for android and ios (or browser) using Webpack and Cordova.
    </description>
    <author email="author@author.be" href="http://to.author.com">
        Author name
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="Orientation" value="landscape" />
    <platform name="android">
        <icon src="appIcon.png" density="ldpi" />
        <icon src="appIcon.png" density="mdpi" />
        <icon src="appIcon.png" density="hdpi" />
        <icon src="appIcon.png" density="xhdpi" />
        <icon src="appIcon.png" density="xxhdpi" />
        <icon src="appIcon.png" density="xxxhdpi" />
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <!-- iOS 8.0+ -->
        <!-- iPhone 6 Plus  -->
        <icon src="appIcon.png" width="180" height="180" />
        <!-- iOS 7.0+ -->
        <!-- iPhone / iPod Touch  -->
        <icon src="appIcon.png" width="60" height="60" />
        <icon src="appIcon.png" width="120" height="120" />
        <!-- iPad -->
        <icon src="appIcon.png" width="76" height="76" />
        <icon src="appIcon.png" width="152" height="152" />
        <!-- Spotlight Icon -->
        <icon src="appIcon.png" width="40" height="40" />
        <icon src="appIcon.png" width="80" height="80" />
        <!-- iOS 6.1 -->
        <!-- iPhone / iPod Touch -->
        <icon src="appIcon.png" width="57" height="57" />
        <icon src="appIcon.png" width="114" height="114" />
        <!-- iPad -->
        <icon src="appIcon.png" width="72" height="72" />
        <icon src="appIcon.png" width="144" height="144" />
        <!-- iPad Pro -->
        <icon src="appIcon.png" width="167" height="167" />
        <!-- iPhone Spotlight and Settings Icon -->
        <icon src="appIcon.png" width="29" height="29" />
        <icon src="appIcon.png" width="58" height="58" />
        <!-- iPad Spotlight and Settings Icon -->
        <icon src="appIcon.png" width="50" height="50" />
        <icon src="appIcon.png" width="100" height="100" />
        <!-- iPad Pro -->
        <icon src="appIcon.png" width="167" height="167" />
    </platform>
</widget>
